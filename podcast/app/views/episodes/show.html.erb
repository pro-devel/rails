<div id="podcast_show">
	<div id="show_banner">
		<div class="wrapper_skinny">
		<h1><%= @user.title %></h1>
			<p id="description">
				<%= @user.description %>
			</p>
			<% unless @user.itunes.blank? %>
				<a href="<%= @user.itunes %>" target="_blank" class="subscribe_button">iTunes</a>
			<% end %>

			<% unless @user.stitcher.blank? %>
				<a href="<%= @user.stitcher %>" target="_blank" class="subscribe_button">Stitcher</a>
			<% end %>

			<% unless @user.podbay.blank? %>
				<a href="<%= @user.podbay %>" target="_blank" class="subscribe_button">PodBay</a>
			<% end %>
		</div>
	</div>

	<div id="breadcrumb">
		<%= link_to users_path do %>
			all podcasts
		<% end %>
		<span>/</span>
		<%= link_to user_path(@user) do %>
			<%= @user.title %>
		<% end %>
		<span>/</span>
		<%= @episode.title %>
	</div>

	<div id="episode_content">
		<div class="wrapper_skinny">
			<img src="images/seenwes.svg" class="current_episode_thumbnail" alt="">
			<h2><%= @episode.title %></h2>
			<p class="description">
			<%= @episode.description %>
			</p>
		</div>
	</div>

	<div id="episodes">
		<div class="wrapper_skinny">
			<ul class="cf">
				<% @episodes.each do |episode| %>
					<li class="cf">
						<div class="episode_thumbnail">
							<a href="#">
								<img src="images/seenwes.svg" alt="">
							</a>
						</div>
						<div class="episode_overview">
							<h2><%= link_to episode.title, user_episode_path(@user, episode) %></h2>
							<p class="description">
								<%= episode.description %>
							</p>
						</div>
					</li>
				<% end %>
				<!-- end episode -->
			</ul>
		</div>
	</div>
</div>
<div class="pagination">
	<span class="previous_page disabled">Previous</span>
	<em class="current">1</em>
	<a href="#">2</a>
	<a href="#" class="next_page">Next</a>
</div>